<div class="container mt-5">
    <h1 class="page-title mt-5">Tenants</h1>
    <h5 class="">List</h5>
    <div class="row row-cards mt-1">

        @foreach (var tenant in Model.Tenants)
        {
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="row g-2 align-items-center">
                            <div class="col-auto">
                                <span class="avatar avatar-lg" style="">
                                    <img src="./assets/tenant1.png" width="64" height="64" alt="tenant">

                                </span>
                            </div>
                            <div class="col">
                                <div class="text-muted">
                                    Tenant
                                </div>
                                <h4 class="card-title m-0">
                                    <a asp-area="" asp-controller="Tenants" asp-action="Details" asp-route-id="@tenant">@tenant</a>
                                </h4>
                                <div class="small mt-1">
                                    <span class="badge bg-green"></span> Online
                                </div>
                            </div>
                            <div class="col-auto">
                                <a asp-area="" asp-controller="Tenants" asp-action="Details" asp-route-id="@tenant" class="btn">
                                    View
                                </a>
                            </div>
                            <div class="col-auto">
                                <div class="dropdown">
                                    <a href="#" class="card-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        <!-- Download SVG icon from http://tabler-icons.io/i/dots-vertical -->
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><circle cx="12" cy="12" r="1" /><circle cx="12" cy="19" r="1" /><circle cx="12" cy="5" r="1" /></svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>